@import "nib"

.opentip-container, .opentip-container *
  box-sizing border-box

.opentip-container
  position absolute
  max-width 300px
  z-index 100
  transition none
    
  &.hidden
    display none

  .opentip
    position relative
    font-size 13px
    line-height 120%
    padding 3px
    color rgba(0, 0, 0, 0.7)
    text-shadow -1px -1px 0px rgba(255, 255, 255, 0.2)

  &.style-dark
    .opentip
      color #f8f8f8
      color rgba(255, 255, 255, 0.9)
      text-shadow 1px 1px 0px rgba(0, 0, 0, 0.2)
